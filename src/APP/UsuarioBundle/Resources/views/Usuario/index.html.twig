{% extends '::backend.html.twig' %}

{% block contenido %}
    {% include ":includes:flashes.html.twig" %}
    <div class="row-fluid">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">       
                <div class="x_title">
                    <h2>Listado de usuarios</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped table-bordered" id="tabla">
                        <thead>
                            <tr>
                                <th style="text-align: center;">Username</th>
                                <th style="text-align: center;">Nombre</th>
                                <th style="text-align: center;">Apellido</th>
                                    {#<th>Area</th>#}
                                <th style="text-align: center;">Perfil</th>
                                <th style="text-align: center;">Eliminado</th>
                                <th style="text-align: center;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.username }}</td>
                                    <td>{{ entity.nombre }}</td>
                                    <td>{{ entity.apellido }}</td>                              
                                    <td>{{ entity.perfil }}</td>
                                    

                                    <td class="td-eliminado" id="{{entity.id}}">{% if entity.eliminado %}{% include ":includes:_yesIcon.html.twig" %}{% else %}{% include ":includes:_noIcon.html.twig" %}{% endif %}</td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="...">
                                            <a class="btn btn-default" href="{{ path('usuario_show', { 'id': entity.id }) }}">{% include ":includes:_verIcon.html.twig" %}</a>
                                            <a class="btn btn-default" href="{{ path('usuario_edit', { 'id': entity.id }) }}">{% include ":includes:_editIcon.html.twig" %}</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
