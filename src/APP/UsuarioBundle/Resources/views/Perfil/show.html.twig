{% extends '::backend.html.twig' %}

{% block contenido %}
    {% include ":includes:flashes.html.twig" %}
    <div class="row-fluid">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">       
                <div class="x_title">
                    <h2>Detalle del usuario</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="show-view">
                        <div><label>Proyecto: </label> {{ entity.nombre |default('') }}</div>
                        <div><label>Usuarios asignados: </label>
                            <ul>
                                {% for rol in entity.roles %}

                                    <li>   {{ rol.nombre }} </li>

                                {% endfor %}
                            </ul>
                        </div>
                        <div><label>Proyecto: </label> {{ entity.descripcion |default('') }}</div>
                        <div class="ln_solid"></div>
                        <div class="text-center">
                            {% if is_granted('ROLE_ADMINISTRADOR') %}
                                {% include 'CoreBundle:Default:volverEditar.html.twig' with { 'path' : 'usuario', 'id' : entity.id } %} 
                            {% else %}

                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}