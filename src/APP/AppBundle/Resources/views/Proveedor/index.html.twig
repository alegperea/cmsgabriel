{% extends '::backend.html.twig' %}

{% block contenido %}

    <div class="row-fluid">
        <div class="col-md-12 col-sm-12 col-xs-12">
            {% include ":includes:flashes.html.twig" %}
            <div class="x_panel">       
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <h2>Listado de proveedores</h2>                   
                </div>                
                 <div class="x_title clearfix"></div>
              
                
                <div class="x_content">
                    <table id="datatable-fixed-header" class="table table-striped table-bordered">
                        <thead>
                            <tr>                                
                                <th style="text-align: center;">Nombre</th>
                                <th style="text-align: center;">Telefono</th> 
                                <th style="text-align: center;">Celular</th> 
                                <th style="text-align: center;">Email</th> 
                                <th style="text-align: center;">Acciones</th>  

                            </tr>
                        </thead>
                        <tbody>
                            {% for item in entities %}
                                <tr>
                                    <td>{{ item.nombre }}</td>
                                    <td>{{ item.telefono }}</td>
                                    <td>{{ item.celular }}</td>
                                    <td>{{ item.email }}</td>
                              
                                    <td class="td-acciones text-center">
                                        <a class="btn btn-sm btn-default" href="{{ path('proveedor_show', { 'id': item.id }) }}">{% include ":includes:_verIcon.html.twig" %}</a>
                                        <a class="btn btn-sm btn-default" href="{{ path('proveedor_edit', { 'id': item.id }) }}">{% include ":includes:_editIcon.html.twig" %}</a>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $('#datatable-fixed-header').DataTable({
            fixedHeader: true,
            deferRender: true,
        });
    </script>
{% endblock %}